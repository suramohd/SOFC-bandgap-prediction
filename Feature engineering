from matminer.featurizers.composition import ElementProperty 
 
ep = ElementProperty(data_source="magpie", features=["Number",
                "MendeleevNumber",
                "AtomicWeight",
                "MeltingT",
                "Column",
                "Row",
                "CovalentRadius",
                "Electronegativity",
                "NsValence",
