                "NValence",
                "NsUnfilled",
                "NpUnfilled",
                "NdUnfilled",
                "NfUnfilled",
                "NUnfilled",
                "GSvolume_pa",
            
                  ], stats=["minimum", "maximum", "range", "mean", "avg_dev", "mode"])
column_name = 'composition'
df = ep.featurize_dataframe(df, col_id=column_name)

